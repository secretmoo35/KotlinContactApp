<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.kungsaranuwat.sarayut.kotlincontactapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:name=".controllers.App"
            tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
                android:name=".controllers.LoginActivity"
                android:windowSoftInputMode="stateAlwaysHidden"
                tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".controllers.RegisterActivity">
        </activity>
        <activity android:name=".controllers.ContactListActivity">
        </activity>
    </application>

</manifest>